<%@ Master Language="C#" AutoEventWireup="true"  CodeBehind="Site.master.cs" Inherits="TPWeb_CarritoDeCompras.SiteMaster" %>

<!DOCTYPE html>

<html lang="es" data-bs-theme="dark">
